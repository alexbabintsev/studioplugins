                    img(src='img/account/prods/4-lg.png' alt='product').product-item__img
                .product-item__content
                    .product-item__name Animation Pack
                    .product-item__footer
                        a(href='#').product-item__footer-txt Buy for 47$
                        .product-item__footer-txt.opacity Subscribed

            .product-item.product-item--sm
                img(src='img/account/dec2.svg' alt='decor').product-item__decor
