section.bundle-contains
    .container
        h2.bundle-contains__title <span>This bundle contains</span> <span class='rotate-square'>Save 53$</span>
        .bundle-contains__list
            .product-item.product-item--sm.product-item--pink
                img(src='img/account/dec2.svg' alt='decor').product-item__decor
                .product-item__img-wrap
                    img(src='img/account/prods/3-lg.png' alt='product').product-item__img
                .product-item__content
                    .product-item__name Animation Presets
                    .product-item__footer
                        a(href='#').product-item__footer-txt 35$

            .product-item.product-item--sm.product-item--green
                img(src='img/account/dec2.svg' alt='decor').product-item__decor
                .product-item__img-wrap
                    img(src='img/account/prods/4-lg.png' alt='product').product-item__img
                .product-item__content
                    .product-item__name Animation Pack
                    .product-item__footer
                        .product-item__footer-txt 35$

            .product-item.product-item--sm
                img(src='img/account/dec2.svg' alt='decor').product-item__decor
                .product-item__img-wrap
                    img(src='img/account/prods/3-lg.png' alt='product').product-item__img
                .product-item__content
                    .product-item__name Instagram Library
                    .product-item__footer
                        a(href='#').product-item__footer-txt 35$
        .bundle-contains__btn-group
            a(href='#').btn.btn--red
                span.btn__inner Buy for 200$
            a(href='#').btn.btn--white
                span.btn__inner Subscribe for 45$/month